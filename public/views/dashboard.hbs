<div id="content">

      <section class="py-5 grey lighten-4" id="about">
        <div class="container">
          <div class="pt-5 wow fadeIn text-center">
            <h2 class="h1 pt-5 pb-3">You have <span class="display-2">{{ summedPoints }}</span> <span class="display-5"><i class="fa fa-globe fa-2x green-text"></i></span> earth points</h2>
          </div>
          <div class="row wow" data-wow-delay=".3s">
      <div class="col-lg-12 pl-lg-5 pb-4">

        <div class="pt-5 row wow" data-wow-delay=".3s">
      <div class="pt-5 col-lg-12 pl-lg-5 pb-4">

        {{#each events}}
              <div class="row mb-12">
                <div class="col-1 mr-1"><i class="fa fa-{{this.icon}} fa-2x green-text"></i></div>
                <div class="col-6">
                  <h5 class="font-weight-bold">You {{this.verb}} on {{this.platform}} - {{this.formattedTimestamp}}</h5>
                  <p class="grey-text">
                    {{this.message}}
                  </p>
                </div>
                <div class="col-2"><b><span class="display-5">{{this.points}}</span></b> <span style="font-size: 12px;"><i class="fa fa-globe fa-2x green-text"></i></span></div>
              </div>
         {{/each}}
      </div>
    </div>
      </div>
    </div>
